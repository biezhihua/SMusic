<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".MainActivity">

    <Button
            android:id="@+id/sample_text"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Hello World!"/>

    <Button android:layout_width="match_parent"
            android:text="常规线程"
            android:layout_height="wrap_content"
            android:onClick="normalThread"/>

    <Button android:layout_width="match_parent"
            android:text="mutex线程"
            android:layout_height="wrap_content"
            android:onClick="mutexThread"/>

    <Button android:layout_width="match_parent"
            android:text="主线程调用Java"
            android:layout_height="wrap_content"
            android:onClick="mainThreadCallJava"/>

    <Button android:layout_width="match_parent"
            android:text="子线程调用Java"
            android:layout_height="wrap_content"
            android:onClick="subThreadCallJava"/>

    <Button android:layout_width="match_parent"
            android:text="主线程调用Static Java"
            android:layout_height="wrap_content"
            android:onClick="mainThreadCallStaticJava"/>

    <Button android:layout_width="match_parent"
            android:text="子线程调用Static Java"
            android:layout_height="wrap_content"
            android:onClick="subThreadCallStaticJava"/>

</LinearLayout>